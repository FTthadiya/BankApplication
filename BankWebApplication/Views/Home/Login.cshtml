@section Scripts {
    <script src="~/js/login.js"></script>
}

<div>
    <div class="text-center d-flex justify-content-center align-items-center">
        <div class="card w-50 p-5 m-5 rounded-3">
            <h1 class="display-6 card-title mb-5">Login</h1>
            <form class="d-flex flex-column align-items-center" >
                    <div class="mb-4 text-lg-start w-75">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput">
                    </div>
                    <div class="mb-5 text-lg-start w-75">
                        <label for="passwordInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="passwordInput">
                    </div>
                <button id="loginBtn" type="button" class="btn btn-warning w-25 mt-2 align-self-center" onclick="login()">Login</button>
                <button id="loginLoadingBtn" class="btn w-25 btn-warning" style="display:none" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                </button>
            </form>

        </div>
    </div>
</div>
