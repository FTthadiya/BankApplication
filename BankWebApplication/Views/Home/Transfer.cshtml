@section Scripts {
    <script src="~/js/transfer.js"></script>
}

<div class="text-center d-flex flex-column mt-5 justify-content-center align-items-center" onload="loadAccounts()">
    <h1 class="text-muted">Money Transfer</h1>
    <p class="text-muted">Make money transactions between EasyBank accounts.</p>
    <div class="card w-75 py-5 m-4 rounded-3 mh-100">
        <form class="d-flex flex-column align-items-center justify-content-center align-content-center">
            <div class="d-flex mb-4 w-75">
                <div class=" gap-3 text-lg-start w-75 align-items-center">
                    <label for="tFromAccInput" class="form-label">From</label>
                    <select class="form-control" id="tFromAccSelector">
                    </select>
                </div>
                <span class=" mx-5 my-auto align-items-center text-muted" style="font-size:50px">&#8680</span>
                <div class=" gap-3 text-lg-start w-75 align-items-center">
                    <label for="tToAccInput" class="form-label">To</label>
                    <input type="number" class="form-control" id="tToAccInput" placeholder="Account Number">
                </div>
            </div>
            <div class="mb-4 text-lg-start w-75">
                <label for="tAmountInput" class="form-label">Amount</label>
                <input type="number" class="form-control" id="tAmountInput">
            </div>
            <div class="text-lg-start w-75">
                <label for="tDescriptionInput" class="form-label">Description</label>
                <textarea class="form-control" rows="5" id="tDescriptionInput" > </textarea>
            </div>
            <button id="transferBtn" type="button" class="btn btn-warning w-25 mt-5 align-self-center" onclick="transferMoney()">Transfer</button>
            <button id="transferLoadingBtn" class="btn w-25 mt-5 btn-warning" style="display:none" type="button" disabled>
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Loading...
            </button>
        </form>
    </div>
</div>

