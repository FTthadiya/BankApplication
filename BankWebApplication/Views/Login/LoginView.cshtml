<div class="text-center d-flex justify-content-center">
    <div class="card w-50 p-5 m-5">
        <h1 class="display-6 card-title mb-5">Login</h1>
        <form class="d-flex flex-column align-items-center">
                <div class="mb-4 text-lg-start w-75">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" class="form-control" id="emailInput">
                </div>
                <div class="mb-5 text-lg-start w-75">
                    <label for="passwordInput" class="form-label">Password</label>
                    <input type="password" class="form-control" id="passwordInput">
                </div>
            <p>Don't have an account? <a href="#" onclick="loadView('signup')" class="btn-link pe-auto">Signup</a></p>
            <button type="submit" class="btn btn-primary w-25 mt-2 align-self-center">Submit</button>
        </form>

    </div>
</div>
