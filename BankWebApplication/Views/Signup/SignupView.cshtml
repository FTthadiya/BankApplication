<div class="text-center d-flex justify-content-center">
    <div class="card w-50 p-5 m-4">
        <h1 class="display-6 card-title mb-5">Signup</h1>
        <form class="d-flex flex-column align-content-center">
            <div class="d-flex w-100 justify-content-around gap-4">
                <div class="mb-3 text-lg-start w-50">
                    <label for="nameInput" class="form-label">Name</label>
                    <input type="text" class="form-control" id="nameInput">
                </div>
                <div class="mb-3 text-lg-start w-50">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" class="form-control" id="emailInput">
                </div>
            </div>
            <div class="d-flex w-100 justify-content-around gap-4">
                <div class="mb-3 text-lg-start w-100">
                    <label for="phoneInput" class="form-label">Phone</label>
                    <input type="tel" class="form-control" id="phoneInput">
                </div>
                <div class="mb-3 text-lg-start w-100">
                    <label for="addressInput" class="form-label">Address</label>
                    <input type="email" class="form-control" id="addressInput"/>
                </div>
            </div>
            <div class="d-flex mb-4 w-100 justify-content-around gap-4">
                <div class="mb-3 text-lg-start  w-100">
                    <label for="passwordInput" class="form-label">Password</label>
                    <input type="password" class="form-control" id="passwordInput">
                </div>    
                <div class="mb-3 text-lg-start  w-100">
                    <label for="confPasswordInput" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confPasswordInput">
                </div>

            </div>
            <p>Already have an account? <a href="#" onclick="loadView('login')" class="btn-link pe-auto">Login</a></p>
            <button type="submit" class="btn btn-primary w-25 align-self-center">Submit</button>
        </form>

    </div>
</div>

